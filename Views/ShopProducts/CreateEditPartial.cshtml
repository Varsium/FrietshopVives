@model Product
<div asp-validation-summary="ModelOnly"></div>
<div class="form-group">
    <input asp-for="Id" hidden="hidden" />
</div>
<div class="form-group">
    <input asp-for="Quantity" value="1" hidden="hidden" class="form-control" />
    <span asp-validation-for="Quantity"></span>
</div>
<div class="form-group">
    <label asp-for="Ingredient"></label>
    <input required="required" asp-for="Ingredient" class="form-control" />
    <span asp-validation-for="Ingredient"></span>

</div>
<div class="form-group">
    <label asp-for="Price"></label>
    <input required="required" pattern="^\d*(\.|,\d{0,2})?$"  asp-for="Price" class="form-control" />
    <span asp-validation-for="Price"></span>
</div>

